<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_back_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:enabled="true"
        android:onClick="onClick"
        android:text="@string/back"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_logo"
        android:scaleType="fitCenter"
        android:src="@drawable/nortorix"
        android:focusableInTouchMode="true"
        android:layout_alignRight="@+id/button_back_about"
        android:layout_alignLeft="@+id/button_back_about"
        android:layout_above="@+id/button_blogger" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="@string/version"
        android:textSize="16sp"
        android:layout_above="@+id/button_back_about"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_blogger"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/blogger"
        android:enabled="true"
        android:onClick="onClick"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="0dp"
        android:layout_above="@+id/textView6" />

    <Button
        android:id="@+id/button_twitter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/twitter"
        android:enabled="true"
        android:onClick="onClick"
        android:textSize="40sp"
        android:layout_toRightOf="@+id/button_blogger"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/button_blogger" />

    <Button
        android:id="@+id/button_vk"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/vk"
        android:enabled="true"
        android:onClick="onClick"
        android:textSize="40sp"
        android:layout_alignTop="@+id/button_blogger"
        android:layout_toLeftOf="@+id/button_blogger"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp" />

</RelativeLayout>